<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Frag1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="147dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        android:src="@drawable/hospital_icon"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        android:hint="Full Name"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/m_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:hint="Mother's Full Name"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HospRegNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_name"
        android:hint="Hospital Registration Number"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableLeft="@drawable/hospital"
        android:drawablePadding="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blood_grp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HospRegNo"
        android:hint="Blood Group"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:padding="20dp"
        android:drawableLeft="@drawable/hospital"
        android:drawablePadding="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="110dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>